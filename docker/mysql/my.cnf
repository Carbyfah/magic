[mariadb]
# Performance para MariaDB específicamente
innodb_buffer_pool_size = 256M
innodb_log_file_size = 64M
innodb_flush_log_at_trx_commit = 2
innodb_flush_method = O_DIRECT

# Query cache para MariaDB
query_cache_type = ON
query_cache_size = 64M
query_cache_limit = 1M

# Conexiones
max_connections = 100
wait_timeout = 300
interactive_timeout = 300

# Buffers MariaDB
key_buffer_size = 32M
read_buffer_size = 1M
sort_buffer_size = 2M
join_buffer_size = 1M

# Aria engine (específico de MariaDB)
aria_pagecache_buffer_size = 64M

# Logs desactivados para desarrollo
general_log = 0
slow_query_log = 0

# Charset
character_set_server = utf8mb4
collation_server = utf8mb4_unicode_ci

[mysql]
default-character-set = utf8mb4

[client]
default-character-set = utf8mb4